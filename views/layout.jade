doctype
html(ng-app="myQmpj")
  head
    meta(charset='utf8')
    base(href='/')
    title= title

    
    link(rel='stylesheet', href='/css/jmv.min.css')

  body
    .row
        .navbar.navbar-inverse.navbar-fixed-top
            .container
                .navbar-header
                    a.navbar-brand.active(href='/') QMPJ
                .collapse.navbar-collapse(ng-controller="HeaderCtrl")
                    ul.nav.navbar-nav
                        li( ng-class="{ active: isActive('/home')}")
                            a(href='/home') Upload Java source-code
                        li( ng-class="{ active: isActive('/results')}", class="{{disableIfNoLatestResult()}}")
                            a(href='/results/{{resultPath()}}') Latest results
                        li( ng-class="{ active: isActive('/config')}")
                            a(href='/config') Configuration
                        li( ng-class="{ active: isActive('/about')}")
                            a(href='/about') About
                        li(class="")
                            a(ng-click='logout()', href='#') Logout



    .container.main
        .row
            block content
      

    script(src='//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js')
    //-script(src='js/bootstrap.min.js')
    script(src='js/lib/angular/angular.js')
    script(src='js/lib/angular-route/angular-route.min.js')
    script(src='js/lib/angular/angular-file-upload.js')
    script(src='js/lib/angular/angular-resource.js')
    script(src='js/lib/angular/angular-cookies.js')
    script(src='js/lib/angular/angular-ui.bootstrap.js')
    script(src='js/lib/angular/http-auth-interceptor.js')
    script(src='js/lib/angular-sanitize/angular-sanitize.min.js')
    script(src='js/lib/tv4/tv4.js')
    script(src='js/lib/objectpath/lib/ObjectPath.js')
    script(src='js/lib/angular-schema-form/dist/schema-form.min.js')
    script(src='js/lib/angular-schema-form/dist/bootstrap-decorator.min.js')
    script(src='js/lib/google-chart/ng-google-chart.js')
    script(src='js/app.js')
    script(src='js/services.js')
    script(src='js/controllers.js')
    script(src='js/filters.js')
    script(src='js/directives.js')
    script(src='js/prettify.js')

